#!/usr/bin/env bash
# ****************************************************
#
#   git-kick
#
#  Unlock repo's lock
#
# ----------------------------------------------------
#   Dependencies
# ----------------------------------------------------
#
# ----------------------------------------------------
#   Usage
# ----------------------------------------------------
#
#  `git kick` within a git repo
#
# ****************************************************

# Error handling

set -o errexit
set -o nounset
set -o pipefail

# ----------------------------------------------------
#   Variables
# ----------------------------------------------------

# ----------------------------------------------------
#   Functions
# ----------------------------------------------------
kick() {
if [ -f ./.git/index.lock ]; then
	echo "Unlocking..."
	rm -f ./.git/index.lock
else
	echo "The git repo is not locked"
fi
}

# ----------------------------------------------------
#   Main
# ----------------------------------------------------

kick
